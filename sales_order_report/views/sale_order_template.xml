<odoo>
    <data>
        <record id="paperformat_pdf" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <report string="Sales/Quotation Report"
                id="sales_order_report_id"
                model="sale.order"
                report_type="qweb-pdf"
                name="sales_order_report.sale_order_report"
                file="sales_order_report.sale_order_report"
                paperformat="purchase_sale_order_report.paperformat_pdf"


        />

        <template id="custom_external_layout_header_new2">
            <div class="header">
                <table border="0">
                    <tr>
                        <th align="center">
                            <div width="100%" align="center">
                                <img align="center" src="/delivery_order_report/static/description/inetwork_header.png"
                                     style=" height:80px; width:220px;"/>
                            </div>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:500px;">
                            <div style="border-color:black,border-style:solid;height:1px;width:500px;"></div>
                        </th>
                        <th>
                            <table class="table table-sm"
                                   style="border-color:black,border-style:solid;width:190px;" border="1">

                                <thead style="color: #FFFAF0;background-color: #808080;"
                                       align="center">
                                    <td t-if="doc_model in ['sale.order']"
                                        style="text-color: #111111;border: 1px solid black;font-size:20px;height:30px;">
                                        <span style="text-color: #FFFAF0;">Sales Quotation</span>
                                    </td>
                                </thead>
                                <tbody align="center" style="border: 1px solid black;">
                                    <td style="border: 1px solid black;">
                                        <span style="font-size:20px;height:30px;" t-field="o.name"/>
                                    </td>
                                </tbody>
                                <tbody align="center" style="border: 1px solid black;">
                                    <td style="border: 1px solid black;">

                                        <span style="font-size:20px;height:30px;" t-field="o.date_order"
                                              t-options="{&quot;format&quot;: &quot;yyyy-MM-dd&quot;}" />
                                    </td>
                                </tbody>
                            </table>
                        </th>
                    </tr>
                </table>
                <br/>
                <br/>
            </div>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

        </template>
        <template id="external_layout_footer_new2">
            <div class="footer">

                <p style="border-top:1px solid #000000;">

                </p>
                <center>
                    <table border="0" align="center">
                        <tr>
                            <th>
                                <span class="text-center" style="font-size:15px;font-weight: lighter;">
                                    Villa 269, Abdel monem St, 6Th district opposite mall of arabia Giza Egypt Tel: 02
                                    38241650
                                    <br/>
                                    <br/>
                                    http://www.inetwork.com.eg | info@inetwork.com.eg
                                </span>

                            </th>
                        </tr>
                    </table>
                </center>
            </div>
        </template>


        <template id="external_layout_new2">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>


            <t t-call="sales_order_report.custom_external_layout_header_new2">
                <t t-raw="0"/>
            </t>
            <t t-call="sales_order_report.external_layout_footer_new2"/>

        </template>

        <template id="sale_order_report">
            <t t-call="web.html_container">
                <t t-set="count_page" t-value="0"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="sales_order_report.external_layout_new2">
                        <t t-set="o" t-value="o.with_context({'lang':'en_US'})"/>
                        <div class="page">
                            <br/>
                            <br/>
                            <table class="table table-sm">
                                <tr>
                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bolder" class="text-center">
                                            <strong>Description</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:15px;font-weight: lighter;" t-field="o.description"/>
                                    </th>

                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bolder" class="text-center">
                                            <strong>Valid to</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:15px;font-weight: lighter;" t-field="o.validity_date"/>
                                    </th>


                                </tr>

                                <tr>
                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bolder" class="text-center">
                                            <strong>Customer</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:16px;font-weight: lighter;" t-if="o.partner_id.name"
                                              t-field="o.partner_id.name"/>
                                    </th>

                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bolder" class="text-center">
                                            <strong>Sales person</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:16px;font-weight: lighter;" t-field="o.user_id"/>

                                    </th>


                                </tr>
                                <tr>
                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bold" class="text-center">
                                            <strong>Attention</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:15px;font-weight: lighter;"
                                              t-field="o.attention.parent_id.name"/>
                                        <span style="font-size:15px;font-weight: lighter;"
                                              t-if="o.attention.parent_id.name">,
                                        </span>
                                        <span style="font-size:15px;font-weight: lighter;"
                                              t-field="o.attention.name"></span>
                                    </th>

                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bold" class="text-center">
                                            <strong>Mobile No.</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold;" t-field="o.user_id.mobile"/>

                                    </th>


                                </tr>

                                <tr>
                                    <th  style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:16px;font-weight:bold" class="text-center">
                                            <strong>Site</strong>
                                        </span>

                                    </th>
                                    <th  style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold;" t-field="o.site_name"/>

                                    </th>

                                </tr>
                            </table>
                            <br/>

                            <table class="table table-sm" style="border: 1px solid black;width:100%;hieght:100%;"
                                   border="1">
                                <thead style="background-color:#029c4f;font-size:15px;font-weight:bold;text-color:#303030;"
                                       align="right">
                                    <tr>
                                        <th style="border: 1px solid #D9D0D0;width:1%;color:white;" class="text-left">
                                            <strong>No</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>PN</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>Description</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>Qty</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;width:100px;color:white;"
                                            class="text-left">
                                            <strong>Unit Price</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;width:100px;"
                                            class="text-left">
                                            <strong>Total Price</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;width:100px;"
                                            class="text-left">
                                            <srong>Availability</srong>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody border="1" style="border-color:black;font-size:15px;color:#303030">
                                    <t t-set="item" t-value="0"/>

                                    <t t-foreach="o.order_line" t-as="line">

                                        <t t-set="item" t-value="item+1"/>
                                        <tr>
                                            <td style="border: 1px solid #D9D0D0;" align="left">
                                                <span t-esc="item"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.price_unit"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <!--<span t-if="line.qty_available_today > 0">Stock</span>-->
                                                <!--<span t-if="line.qty_available_today &lt;= 0">Not Stock</span>-->
                                                <span t-field="line.availability_id"/>


                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="border: 1px solid #D9D0D0">
                                        <!--<table class="table table-sm"-->
                                        <!--style="border-color:black,border-style:solid;width:100%;hieght:100%;"-->
                                        <!--border="1">-->
                                        <tr>
                                            <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                            </th>
                                            <th class="text-center"
                                                style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                align="center">
                                                <strong>SUBTOTAL</strong>
                                            </th>
                                            <th class="text-right"
                                                style="border: 1px solid #D9D0D0;font-size:15px;;width:85px;width:100px;"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a"
                                                      t-field="o.amount_untaxed"/>
                                            </th>
                                            <th style="font-size:17px;border: 1px solid #D9D0D0">

                                            </th>
                                        </tr>
                                        <tr>
                                            <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                            </th>
                                            <th class="text-center"
                                                style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                align="center">
                                                <span>14% VAT</span>
                                            </th>
                                            <th class="text-right"
                                                style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a" t-field="o.amount_tax"/>
                                            </th>
                                            <th style="font-size:17px;border: 1px solid #D9D0D0">

                                            </th>
                                        </tr>
                                        <tr>
                                            <th colspan="4" style="font-size:15px;border: 1px solid #D9D0D0">
                                            </th>
                                            <th class="text-center"
                                                style="border: 1px solid #D9D0D0;font-size:17px;width:100px;"
                                                align="center">
                                                <strong>Taxes</strong>
                                            </th>
                                            <th class="text-right"
                                                style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a" t-field="o.amount_tax"/>
                                            </th>
                                            <th style="font-size:17px;border: 1px solid #D9D0D0">

                                            </th>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <th class="text-center" colspan="4"
                                                style="background-color:#029c4f;font-size:17px;border: 1px solid #D9D0D0;font-weight:bold;color:white;"
                                                align="center">
                                                <span style="font-size:15px" t-field="o.tafqeet_total"/>
                                            </th>
                                            <th class="text-center"
                                                style="background-color:#029c4f;font-size:15px;border: 1px solid #D9D0D0;width:100px;color:white;"
                                                align="center">
                                                <strong>Total</strong>
                                            </th>

                                            <th class="text-right"
                                                style="background-color:#029c4f;font-size:15px;border: 1px solid #D9D0D0;width:100px;color:white;"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a;color:white;"
                                                      t-field="o.amount_total"/>
                                            </th>
                                            <th style="background-color:#029c4f;font-size:15px;border: 1px solid #D9D0D0;width:100px;color:white;">

                                            </th>
                                        </tr>
                                        <!--</table>-->
                                    </tr>
                                </tbody>
                            </table>

                            <br></br>
                            <span t-if="o.note" style="font-size:27px;text-decoration: underline;text-color:#303030;">
                                Terms and Conditions:
                            </span>
                            <br/>
                            <span t-field="o.note" style="font-size:15px;"/>
                            <br></br>
                            <span t-if="o.payment_term_id.name" style="font-size:15px;font-weight:bold">Payment term |
                            </span>
                            <span t-field="o.payment_term_id.name" style="font-size:15px;"/>
                            <p style="page-break-after: always;"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
