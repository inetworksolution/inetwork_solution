<odoo>
    <data>

        <report
                id="custom_account_invoices"
                model="account.move"
                string="New Invoice"
                report_type="qweb-pdf"
                name="invoice_reports.report_invoice_custom"
                file="invoice_reports.report_invoice_custom"
                paperformat="invoice_reports.paperformat_pdf"
        />

        <template id="itsys_report_invoice_document">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <style>
                    td {
                    padding: 5px;
                    }
                    table{
                    border-collapse: collapse;
                    font-size:14px;
                    color:#3c343c;
                    }
                </style>
                <div align="right">
                    <h2>
                        <table style="width:40px;hieght:50px;margin-top:50px;">
                            <thead style="background-color:gray;color: #FFFFFF;font-size:17px;" align="right">
                                <tr style="padding: 20px;">
                                    <td style="border: 1px solid #3c343c;padding: 5px 10px 10px 10px;" align="center">
                                        <span class="text-center" style="font-size:18px;">INVOICE</span>
                                    </td>
                                </tr>
                            </thead>
                            <tr>
                                <td style="width:50px;hieght:50px;border: 1px solid #3c343c;padding: 5px 10px 10px 45px;"
                                    align="right">
                                    <span class="text-right" style="font-size:18px;color:black;" t-if="o.name != '/'"
                                          t-field="o.name"></span>
                                </td>
                            </tr>
                        </table>
                    </h2>
                </div>
                <br/>
                <table style="width:100%;height:100px;">
                    <tr>
                        <th>
                            <td style="font-size:15px;font-weight:bold;height:1px;" align="left">
                                <strong>Customer</strong>
                            </td>
                            <td style="height:1px;" align="left">
                                <span>|</span>

                                <span t-field="o.partner_id.name"/>
                            </td>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                        </th>
                        <th>
                            <td>
                                <div align="right">
                                    <span t-field="o.company_id.commercial_record" align="right"/>
                                    <span>|</span>
                                </div>
                            </td>
                            <td style="font-size:15px;font-weight:bold ;height:1px;width:150px;" align="right">
                                <strong>سجل تجاري</strong>
                            </td>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <td style="font-size:15px;font-weight:bold ;height:1px" align="left">
                                <strong>Attention</strong>
                            </td>
                            <td style="height:1px;" align="left">
                                <t t-foreach="o.partner_id.child_ids" t-as="line">
                                    <span>|</span>
                                    <span t-field="line.name"/>
                                </t>
                            </td>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                        </th>
                        <th>
                            <td>
                                <div align="right">
                                    <span t-field="o.company_id.vat" align="right"/>
                                    <span>|</span>
                                </div>
                            </td>
                            <td style="font-size:15px;font-weight:bold ;height:1px;width:150px;" align="right">
                                <strong>بطاقة ضريبية</strong>
                            </td>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <td style="font-size:15px;font-weight:bold ;height:1px;" align="left">
                                <strong>Invoice Address</strong>
                            </td>
                            <td style="height:1px;" align="left">
                                <span>|</span>
                                <span t-field="o.partner_id.street"/>
                            </td>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                        </th>
                        <th>
                            <td>
                                <div align="right">
                                    <span t-field="o.company_id.tax_file" align="right"/>
                                    <span>|</span>
                                </div>
                            </td>
                            <td style="font-size:15px;font-weight:bold ;height:1px;width:200px;" align="right">
                                <strong>ملف ضريبي</strong>
                            </td>
                        </th>

                    </tr>
                    <tr>
                        <th>
                            <td style="font-size:15px;font-weight:bold ;height:1px;" align="left">
                                <strong>Invoice Date</strong>
                            </td>
                            <td style="height:1px;" align="left">
                                <span>|</span>
                                <span t-field="o.invoice_date"></span>
                            </td>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                        </th>
                        <th>
                            <td>
                                <div align="right">
                                    <span t-field="o.company_id.sales_taxes" align="right"/>
                                    <span>|</span>
                                </div>
                            </td>
                            <td style="font-size:15px;font-weight:bold ;height:1px;width:200px;" align="right">
                                <strong>ضرائب المبيعات</strong>
                            </td>
                        </th>
                    </tr>

                </table>
                <br/>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <table style="border-color:black;width:100%;hieght:100%;" border="1">
                    <thead style="background-color:#3cb35a;font-size:15px;font-weight:bold;">
                        <tr>
                            <th style="border: 1px solid grey;width:1%;padding: 25px 10px 5px 10px;"
                                class="text-center">
                                <span style="color: #FFFFFF;">ITEM</span>
                            </th>
                            <th style="border: 1px solid grey;padding: 25px 10px 5px 10px;" align="left">
                                <span style="color: #FFFFFF;">PN</span>
                            </th>
                            <th style="border: 1px solid grey;padding: 25px 10px 5px 10px;" align="left">
                                <span style="color: #FFFFFF;">DESCRIPTION</span>
                            </th>
                            <th style="border: 1px solid grey;padding: 5px;padding: 25px 10px 5px 10px;"
                                class="text-center">
                                <span style="color: #FFFFFF;">QUANTITY</span>
                            </th>
                            <th style="border: 1px solid grey;width:100px;padding: 10px" align="right">
                                <span style="color: #FFFFFF;" align="right">UNIT</span>
                                <br/>
                                <span style="color: #FFFFFF;" align="right">PRICE</span>
                            </th>
                            <th style="border: 1px solid grey;padding: 25px 10px 5px 10px;" align="right">
                                <span style="color: #FFFFFF;">AMOUNT</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody border="1" style="border-color:black;font-size:14px">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="i" t-value="1"/>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td style="border: 1px solid gray;padding: 5px;" align="center">
                                        <t t-esc="i"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="left">
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="left"
                                        name="account_invoice_line_name">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="right"
                                        t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit"
                                              t-options="{'widget': 'monetary', 'display_currency': line.currency_id}"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="right">
                                        <span t-field="line.price_subtotal"
                                              groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total"
                                              groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-set="i" t-value="i+1"/>
                            </tr>
                        </t>

                        <tr>
                            <td colspan="4" style="border: 1px solid gray;padding: 5px;" align="center"></td>
                            <td style="border: 1px solid gray;padding: 5px 5px 5px 10px;font-size:15px;"
                                align="left">
                                <strong>SUBTOTAL</strong>
                            </td>
                            <td style="border: 1px solid gray;padding: 5px;" align="right">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                            <tr>
                                <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                    <td colspan="4" style="border: 1px solid gray;padding: 5px;" align="right"></td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="left">
                                        <span t-esc="amount_by_group[0]"/>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="right">
                                        <span t-esc="amount_by_group[3]"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="4" style="border: 1px solid gray;padding: 5px;" align="right"></td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="left">
                                        <span t-esc="amount_by_group[0]"/>
                                        <span>&amp;nbsp;
                                            <span>on</span>
                                            <t t-esc="amount_by_group[4]"/>
                                        </span>
                                    </td>
                                    <td style="border: 1px solid gray;padding: 5px;" align="right">
                                        <span t-esc="amount_by_group[3]"/>
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid gray;padding: 5px;" align="left"></td>
                                <td style="border: 1px solid gray;padding: 5px;font-size:15px;" align="left">
                                    <strong>Taxes</strong>
                                </td>
                                <td style="border: 1px solid gray;padding: 5px;" align="right">
                                    <span t-esc="amount_by_group[3]"/>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <thead style="background-color:#3cb35a;font-size:15px;">
                                <td colspan="4" style="border: 1px solid gray;padding: 5px;" align="center">
                                    <span style="color: #FFFFFF;padding: 5px;" class="m-0" t-field="o.num_word"/>
                                </td>
                                <td style="border: 1px solid gray;padding: 5px;" align="left">
                                    <strong style="color: #FFFFFF;padding: 5px;">Total</strong>
                                </td>
                                <td style="border: 1px solid gray;padding: 5px;" align="center">
                                    <span style="color: #FFFFFF;padding: 5px;" t-field="o.amount_total"/>
                                </td>
                            </thead>
                        </tr>

                    </tbody>
                </table>

                <!--<br></br>-->
                <br></br>
                <p t-if="o.narration" name="comment">
                    <span style="font-size:12px;color:#3c343c;" t-field="o.narration"/>
                </p>

                <span t-field="o.company_id.invoice_footer" style="font-size:12px;color:#3c343c;"/>
                <br></br>
                <br></br>

                <span t-if="o.invoice_date_due" style="font-size:13px;font-weight:bold;color:#3c343c;">Payment Due |
                </span>
                <span t-field="o.invoice_date_due" style="font-size:14px;color:#3c343c;"/>
                <br></br>
                <span t-if="o.invoice_payment_term_id" style="font-size:13px;font-weight:bold;color:#3c343c;">Payment
                    term |
                </span>
                <span t-field="o.invoice_payment_term_id" style="font-size:14px;color:#3c343c;"/>
                <br></br>
                <!--                            <span t-if="o.cst_po_number_id" style="font-size:15px;font-weight:bold">CST PO Number |</span>-->
                <!--                            <span t-field="o.cst_po_number_id" style="font-size:15px;"/>-->
                <span t-if="o.fiscal_position_id" style="font-size:13px;font-weight:bold;color:#3c343c;">Site</span>
                <span t-field="o.fiscal_position_id" style="font-size:14px;color:#3c343c;"/>
                <br></br>

                <!--                        <p t-if="o.fiscal_position_id.note" name="note">-->
                <!--                            <span t-field="o.fiscal_position_id.note"/>-->
                <!--                        </p>-->
                <!--                        <div id="qrcode" t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">-->
                <!--                            <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">-->
                <!--                                <strong class="text-center">Scan me with your banking app.</strong><br /><br />-->
                <!--                                <img class="border border-dark rounded" t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual,(o.ref) if (o.ref) else o.name)"/>-->
                <!--                            </p>-->
                <!--                            <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">-->
                <!--                                <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong><br />-->
                <!--                            </p>-->
                <!--                        </div>-->
            </div>
        </template>


        <template id="report_invoice_custom">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="invoice_reports.itsys_report_invoice_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>