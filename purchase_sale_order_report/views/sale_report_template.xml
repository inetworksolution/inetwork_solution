<odoo>
    <data>
        <record id="paperformat_pdf" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>
        <report string="Sale Report"
                id="sale_report_id"
                model="sale.order"
                report_type="qweb-pdf"
                name="purchase_sale_order_report.sale_report"
                file="purchase_sale_order_report.sale_report"
                paperformat="purchase_sale_order_report.paperformat_pdf"


        />

        <template id="custom_external_layout_header_new">
            <div class="header">
                <table border="0">
                    <tr>
                        <th align="center">
                            <div width="100%" align="center">
                                <img align="center"
                                     src="/purchase_sale_order_report/static/description/inetwork_header.png"
                                     style=" height:80px; width:220px;"/>
                            </div>
                        </th>
                        <th style="border-color:black,border-style:solid;height:1px;width:500px;">
                            <div style="border-color:black,border-style:solid;height:1px;width:500px;"></div>
                        </th>
                        <th>
                            <table class="table table-sm"
                                   style="border-color:black,border-style:solid;width:200px;" border="1">

                                <thead style="color: #FFFAF0;background-color: #808080;font-weight:70px;"
                                       align="center">
                                    <td t-if="doc_model in ['sale.order']"
                                        style="text-color: #111111;border: 1px solid black;font-weight:70px;font-size:22px;height:30px;">
                                        <span style="text-color: #FFFAF0;">Sale Order</span>
                                    </td>
                                    <td t-if="doc_model in ['purchase.order']"
                                        style="text-color: #111111;border: 1px solid black;font-weight:70px;font-size:22px;height:30px;">
                                        <span style="text-color: #FFFAF0;">Purchase Order</span>
                                    </td>


                                </thead>
                                <tbody align="center">
                                    <td style="border: 1px solid black;font-weight: lighter;">
                                        <span style="font-size:22px;height:30px;" t-field="o.name"/>
                                    </td>
                                </tbody>
                            </table>
                        </th>
                    </tr>
                </table>
                <br/>
                <br/>
            </div>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

        </template>
        <template id="external_layout_footer_new">
            <div class="footer">

                <p style="border-top:1px solid #000000;">

                </p>
                <center>
                    <table border="0" align="center">
                        <tr>
                            <th>
                                <span class="text-center" style="font-size:15px;font-weight: lighter;">
                                    Villa 269, Abdel monem St, 6Th district opposite mall of arabia Giza Egypt Tel: 02
                                    38241650
                                    <br/>
                                    <br/>
                                    http://www.inetwork.com.eg | info@inetwork.com.eg
                                </span>

                            </th>
                        </tr>
                    </table>
                </center>
            </div>
        </template>


        <template id="external_layout_new">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>


            <t t-call="purchase_sale_order_report.custom_external_layout_header_new">
                <t t-raw="0"/>
            </t>
            <t t-call="purchase_sale_order_report.external_layout_footer_new"/>

        </template>

        <template id="sale_report">
            <t t-call="web.html_container">
                <t t-set="count_page" t-value="0"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="purchase_sale_order_report.external_layout_new">
                        <t t-set="o" t-value="o.with_context({'lang':'en_US'})"/>
                        <div class="page">
                            <br/>
                            <!--                             <br/> -->
                            <table style="width:100%;hieght:100px;">
                                <tr>
                                    <th>
                                        <td style="font-size:15px;font-weight:bold;height:1px" align="left">
                                            <strong>Customer</strong>
                                        </td>
                                        <td style="height:1px;color:#2a2a2a" align="left">
                                            <span>|</span>
                                            <span t-field="o.partner_id.parent_id.name"/>
                                            <span t-if="o.partner_id.parent_id.name">,</span>
                                            <span t-field="o.partner_id.name"></span>
                                        </td>
                                    </th>
                                    <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                                    </th>
                                    <th>
                                        <td>
                                            <span t-field="o.company_id.commercial_record" align="right"/>
                                            <span>|</span>
                                        </td>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;width:150px;"
                                            class="text-right">
                                            <strong>سجل تجاري</strong>
                                        </td>
                                    </th>

                                </tr>
                                <tr>
                                    <th>
                                        <td style="font-size:15px;font-weight:bold ;height:1px" align="left">
                                            <strong>Attention</strong>
                                        </td>
                                        <td style="height:1px;color:#2a2a2a" align="left">
                                            <span>|</span>
                                            <span t-field="o.attention.parent_id.name"/>
                                            <span t-if="o.attention.parent_id.name">,</span>
                                            <span t-field="o.attention.name"></span>
                                        </td>
                                    </th>
                                    <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                                    </th>
                                    <th>
                                        <td style="height:1px;color:#2a2a2a">
                                            <span t-field="o.company_id.vat" align="right"/>
                                            <span>|</span>
                                        </td>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;width:150px;"
                                            class="text-right">
                                            <strong>بطاقة ضريبة</strong>
                                        </td>
                                    </th>

                                </tr>
                                <tr>
                                    <th>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;" align="left">
                                            <strong>Invoice Address</strong>
                                        </td>
                                        <td style="height:1px;color:#2a2a2a" align="left">
                                            <span>|</span>
                                            <span t-field="o.partner_invoice_id.parent_id.name"/>
                                            <span t-if="o.partner_invoice_id.parent_id.name">,</span>
                                            <span t-field="o.partner_invoice_id.name"></span>
                                        </td>
                                    </th>
                                    <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                                    </th>
                                    <th>
                                        <td style="height:1px;color:#2a2a2a">
                                            <span t-field="o.company_id.tax_file" align="right"/>
                                            <span>|</span>
                                        </td>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;width:200px;"
                                            class="text-right">
                                            <strong>ملف ضريبي</strong>
                                        </td>
                                    </th>

                                </tr>
                                <tr>
                                    <th>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;" align="left">
                                            <strong>Order Date</strong>
                                        </td>
                                        <td style="height:1px;color:#2a2a2a" align="left">
                                            <span>|</span>
                                            <span t-field="o.date_order"></span>
                                        </td>
                                    </th>
                                    <th style="border-color:black,border-style:solid;height:1px;width:100px;">
                                    </th>
                                    <th>
                                        <td style="height:1px;color:#2a2a2a">
                                            <span t-field="o.company_id.sales_taxes" align="right"/>
                                            <span>|</span>
                                        </td>
                                        <td style="font-size:15px;font-weight:bold ;height:1px;width:200px;"
                                            class="text-right">
                                            <strong>ضرائب المبيعات</strong>
                                        </td>
                                    </th>

                                </tr>

                            </table>
                            <br/>


                            <table class="table table-sm" style="border: 1px solid black;width:100%;hieght:100%;"
                                   border="1">
                                <thead style="background-color:#029c4f;font-size:15px;font-weight:bold;text-color:#303030;"
                                       align="right">
                                    <tr>
                                        <th style="border: 1px solid #D9D0D0;width:1%;color:white;" class="text-left">
                                            <strong>ITEM</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>PN</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>DESCRIPTION</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;"
                                            class="text-left">
                                            <strong>QUANTITY</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;width:100px;color:white;"
                                            class="text-left">
                                            <strong>UNIT PRICE</strong>
                                        </th>
                                        <th style="font-weight:bolder;border: 1px solid #D9D0D0;color:white;width:100px;"
                                            class="text-left">
                                            <strong>AMOUNT</strong>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody border="1" style="border-color:black;font-size:15px;color:#303030">
                                    <t t-set="item" t-value="0"/>

                                    <t t-foreach="o.order_line" t-as="line">

                                        <t t-set="item" t-value="item+1"/>
                                        <tr>
                                            <td style="border: 1px solid #D9D0D0;" align="left">
                                                <span t-esc="item"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.price_unit"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="left">
                                                <span t-field="line.price_subtotal"/>
                                            </td>


                                        </tr>
                                    </t>
                                    <tr style="border: 1px solid #D9D0D0">
                                        <!--<table class="table table-sm"-->
                                               <!--style="border-color:black,border-style:solid;width:100%;hieght:100%;"-->
                                               <!--border="1">-->
                                            <tr>
                                                <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                                </th>
                                                <th class="text-left" style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                    align="center">
                                                    <strong>SUBTOTAL</strong>
                                                </th>
                                                <th class="text-right" style="border: 1px solid #D9D0D0;font-size:15px;;width:85px;width:100px;"
                                                    align="center">
                                                    <span style="font-size:15px;color:#2a2a2a;font-weight: lighter;"
                                                          t-field="o.amount_untaxed"/>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                                </th>
                                                <th  class="text-left" style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                    align="center">
                                                    <strong>Taxes</strong>
                                                </th>
                                                <th class="text-right" style="border: 1px solid #D9D0D0;font-size:15px;width:100px;"
                                                    align="center">
                                                    <span style="font-size:15px;color:#2a2a2a;font-weight: lighter;" t-field="o.amount_tax"/>
                                                </th>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <th class="text-center" colspan="4" style="background-color:#029c4f;font-size:17px;border: 1px solid #D9D0D0;font-weight:bold;color:white;"
                                                    align="center">
                                                    <span style="font-size:15px;font-weight: lighter;" t-field="o.tafqeet_total"/>
                                                </th>
                                                <th  class="text-left" style="background-color:#029c4f;font-size:15px;border: 1px solid #D9D0D0;width:100px;color:white;"
                                                    align="center">
                                                    <strong>Total</strong>
                                                </th>

                                                <th class="text-right" style="background-color:#029c4f;font-size:15px;border: 1px solid #D9D0D0;width:100px;color:white;"
                                                    align="center">
                                                    <span style="font-size:15px;color:#2a2a2a;color:white;font-weight: lighter;"
                                                          t-field="o.amount_total"/>
                                                </th>
                                            </tr>
                                        <!--</table>-->
                                    </tr>
                                </tbody>
                            </table>

                            <!--<br></br>-->
                            <span t-field="o.note" style="font-size:12px;font-weight: lighter;"/>
                            <br></br>
                            <span t-if="o.payment_term_id.name" style="font-size:15px;font-weight:bold"><strong>Payment term |</strong>
                            </span>
                            <span t-field="o.payment_term_id.name" style="font-size:15px;"/>
                            <p style="page-break-after: always;"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
