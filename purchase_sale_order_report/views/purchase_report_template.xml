<odoo>
    <data>
        <report string="Purchase Report"
                id="purchase_report_id"
                model="purchase.order"
                report_type="qweb-pdf"
                name="purchase_sale_order_report.purchase_report"
                file="purchase_sale_order_report.purchase_report"
                paperformat="purchase_sale_order_report.paperformat_pdf"


        />
        <template id="purchase_report">
            <t t-call="web.html_container">
                <t t-set="count_page" t-value="0"/>
                <t t-foreach="docs" t-as="o">
                    <t t-call="purchase_sale_order_report.external_layout_new">
                        <t t-set="o" t-value="o.with_context({'lang':'en_US'})"/>
                        <div class="page">
                            <br/>
                            <!--                             <br/> -->

                            <table class="table table-sm"
                                   style="border: 1px ;border-color:#D9D0D0;width:100%;hieght:100%;">
                                <tr>
                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold" class="text-center">
                                            <strong>Supplier</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%;color:#2a2a2a;" class="text-left">
                                        <span t-field="o.partner_id.parent_id.name"/>
                                        <span t-if="o.partner_id.parent_id.name">,</span>
                                        <span style="font-weight: lighter;" t-field="o.partner_id.name"></span>
                                    </th>

                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold" class="text-center">
                                            <strong>From</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%;color:#2a2a2a;" class="text-left">
                                        <span t-field="o.partner_id.parent_id.name"/>
                                        <span t-if="o.partner_id.parent_id.name">,</span>
                                        <span style="font-weight: lighter;" t-field="o.user_id.name"></span>
                                    </th>


                                </tr>

                                <tr>
                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold" class="text-center">
                                            <strong>Attention</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%;color:#2a2a2a;" class="text-left">
                                        <span style="font-weight: lighter;" t-field="o.attention.parent_id.name"/>
                                        <span style="font-weight: lighter;" t-if="o.attention.parent_id.name">,</span>
                                        <span style="font-weight: lighter;" t-field="o.attention.name"></span>
                                    </th>

                                    <th style="border: 1px solid #D9D0D0;width:20%" class="text-left">
                                        <span style="font-size:15px;font-weight:bold" class="text-center">
                                            <strong>Date</strong>
                                        </span>

                                    </th>
                                    <th style="border: 1px solid #D9D0D0;width:30%;color:#2a2a2a;=" class="text-left">
                                        <span style="font-weight: lighter;" t-field="o.date_order"/>

                                    </th>


                                </tr>

                            </table>
                            <br/>

                            <table class="table table-sm" style="border-color:black;width:100%;hieght:100%;" border="1">
                                <thead style="background-color:#edeaea;font-size:15px;color:black;" align="right">
                                    <tr>
                                        <th style="border: 1px solid #D9D0D0;color:black;" class="text-left">
                                            <strong>ITEM</strong>
                                        </th>
                                        <th style="border: 1px solid #D9D0D0;color:black;" class="text-left">
                                            <strong>PN</strong>
                                        </th>
                                        <th style="border: 1px solid #D9D0D0;color:black;" class="text-left">
                                            <strong>DESCRIPTION</strong>
                                        </th>
                                        <th style="border: 1px solid #D9D0D0;color:black;" class="text-center">
                                            <strong>QUANTITY</strong>
                                        </th>
                                        <th style="border: 1px solid #D9D0D0;width:100px;color:black;"
                                            class="text-center">
                                            <strong>UNIT PRICE</strong>
                                        </th>
                                        <th style="border: 1px solid #D9D0D0;width:100px;color:black;"
                                            class="text-center">
                                            <strong>AMOUNT</strong>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody border="1" style="border-color:black;font-size:15px;color:#2a2a2a">
                                    <t t-set="item" t-value="0"/>

                                    <t t-foreach="o.order_line" t-as="line">

                                        <t t-set="item" t-value="item+1"/>
                                        <tr>
                                            <td style="border: 1px solid #D9D0D0;" align="center">
                                                <span t-esc="item"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="center">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="center">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="center">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name"/>

                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="center">
                                                <span t-field="line.price_unit"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td style="border: 1px solid #D9D0D0" align="center">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="border: 1px solid #D9D0D0">

                                        <!--<table class="table table-sm" style="border-color:black,border-style:solid;width:100%;hieght:100%;"-->
                                        <!--border="1">-->
                                        <tr>
                                            <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                            </th>
                                            <th style="border: 1px solid #D9D0D0;font-size:15px;width:100px"
                                                align="center">
                                                <strong>SUBTOTAL</strong>
                                            </th>
                                            <th style="border: 1px solid #D9D0D0;font-size:15px;width:100px"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a;font-weight: lighter;" t-field="o.amount_untaxed"/>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th colspan="4" style="font-size:17px;border: 1px solid #D9D0D0">
                                            </th>
                                            <th style="border: 1px solid #D9D0D0;font-size:15px;width:100px"
                                                align="center">
                                                <strong>Taxes</strong>
                                            </th>
                                            <th style="border: 1px solid #D9D0D0;font-size:15px;width:100px"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a;font-weight: lighter;" t-field="o.amount_tax"/>
                                            </th>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td colspan="4" style="font-size:15px;border: 1px solid #D9D0D0;font-weight: lighter;"
                                                align="center">
                                                <span class="text-center" style="font-size:15px;" t-field="o.tafqeet_total"/>
                                            </td>
                                            <th style="font-size:15px;border: 1px solid #D9D0D0;width:100px"
                                                align="center">
                                                <strong>Total</strong>
                                            </th>

                                            <th style="font-size:15px;border: 1px solid #D9D0D0;width:100px"
                                                align="center">
                                                <span style="font-size:15px;color:#2a2a2a;font-weight: lighter;" t-field="o.amount_total"/>
                                            </th>
                                        </tr>
                                        <!--</table>-->
                                    </tr>

                                </tbody>
                            </table>


                            <br></br>
                            <table class="table table-sm" style="border: 1px solid #D9D0D0;width:100%;hieght:100%;">
                                <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                    <span style="font-size:15px;font-weight:bold" class="text-center">
                                        <strong>Payment term</strong>
                                    </span>

                                </th>
                                <th style="border: 1px solid #D9D0D0;width:70%;color:#2a2a2a" class="text-left">
                                    <span t-field="o.payment_term_id.name"
                                          style="font-size:15px;font-weight: lighter;"/>
                                </th>

                            </table>
                            <!--<br/>-->
                            <table class="table table-sm"
                                   style="border: 1px solid #D9D0D0;border-color:black;width:100%;hieght:100%;">
                                <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                    <span style="font-size:15px;font-weight:bold" class="text-center">
                                        <strong>Ship to</strong>
                                    </span>

                                </th>
                                <th style="border: 1px solid #D9D0D0;width:70%;color:#2a2a2a" class="text-left">
                                    <span t-field="o.picking_type_id.warehouse_id.name" style="font-size:15px;font-weight: lighter;"/>
                                    <span t-if="o.picking_type_id.warehouse_id.name" style="font-size:15px;font-weight: lighter;">:</span>
                                    <span t-field="o.picking_type_id.name"
                                          style="font-size:15px;font-weight: lighter;"/>
                                </th>

                            </table>
                            <!--<br/>-->
                            <table class="table table-sm"
                                   style="border: 1px ;border-color:#D9D0D0;width:100%;hieght:100%;">
                                <th style="border: 1px solid #D9D0D0;width:30%" class="text-left">
                                    <span style="font-size:15px;font-weight:bold" class="text-center">
                                        <strong>General terms</strong>
                                    </span>

                                </th>
                                <th style="border: 1px solid #D9D0D0;width:70%;color:#2a2a2a" class="text-left">
                                    <span t-field="o.notes" style="font-size:15px;font-weight: lighter;"/>
                                </th>

                            </table>
                            <!--                            <span t-field="o.note" style="font-size:15px;"/>-->
                            <p style="page-break-after: always;"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
