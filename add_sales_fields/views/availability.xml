<odoo>
    <data>


        <record id="sales_availability_form_view" model="ir.ui.view">
            <field name="name">Availability</field>
            <field name="model">availability.availability</field>
            <field name="arch" type="xml">
                <form string="Availability">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="sales_availability_tree_view" model="ir.ui.view">
            <field name="name">availability.availability.tree</field>
            <field name="model">availability.availability</field>
            <field name="arch" type="xml">
                <tree string="Availability">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="availability_action_view" model="ir.actions.act_window">
            <field name="name">Availability</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">availability.availability</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem action="availability_action_view"
                  id="availability_menu_view"
            parent="sale.menu_sale_config"
                  name="Availability"
            />


    </data>
</odoo>